# Google Analytics
# Get your Measurement ID from Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google reCAPTCHA v3
# Get your keys from https://www.google.com/recaptcha/admin
# Site key (public)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
# Secret key (private - never commit to git)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Resend Email API
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Optional: Update the 'from' email in app/api/contact/route.ts
# with your verified domain once you have one set up

# Contact form email routing
# The verified sender address (use your own domain when verified with Resend)
CONTACT_FROM="Cyber Security Stack <no-reply@cybersecuritystack.co.uk>"
# The destination inbox for form submissions
CONTACT_TO=hello@cybersecuritystack.co.uk

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://cybersecuritystack.co.uk/api/linkedin/oauth/callback

# Google Sheets API (optional - for LinkedIn feed)
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Environment
NODE_ENV=production
